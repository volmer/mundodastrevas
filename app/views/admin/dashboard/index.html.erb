<% content_for :page_title, t('.title') %>

<div class='page-header'>
  <h1><%= t '.title' %></h1>
</div>

<%= render 'admin/shared/tabs', active: :dashboard %>

<h2><%= t '.statistics' %></h2>

<dl class="dl-horizontal">
  <dt><%= t '.users.registered' %></dt>
  <dd><%= @registered_users_count %></dd>

  <dt><%= t '.users.confirmed' %></dt>
  <dd><%= @confirmed_users_count %></dd>

  <dt><%= t '.users.blocked' %></dt>
  <dd><%= @blocked_users_count %></dd>

  <dt><%= t '.messages' %></dt>
  <dd><%= @messages_count %></dd>
</dl>
