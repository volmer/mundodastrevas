<%= simple_form_for([:admin, @page]) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.error_notification %>

      <%= f.input :title %>

      <%= f.input :slug %>
    </div>
  </div>

  <%= f.input :content, as: :bootsy, input_html: { class: 'form-control', rows: 10 } %>

  <div class="actions">
    <%= f.submit submit, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
