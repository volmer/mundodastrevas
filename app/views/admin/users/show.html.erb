<% content_for :page_title, t('.title', user: @user) %>

<ol class="breadcrumb">
  <li><%= link_to t('admin.users.index.title'), :back %></li>
  <li class="active"><%= @user %></li>
</ol>

<h2><%= t '.title', user: @user %></h2>

<div class="row">
  <div class="col-md-2">
    <%= link_to image_tag(@user.avatar.small.url, class: 'img-thumbnail'), @user, target: '_blank' %>
  </div>

  <div class="col-md-10">
    <%= simple_form_for([:admin, @user]) do |f| %>
      <%= f.input :state, collection: [:active, :blocked], as: :radio_buttons %>

      <%= f.association :roles, as: :check_boxes,
        label_method: ->(r) { t(r.name, scope: 'role.names') } %>

      <%= f.button :submit, t(:save) %>
    <% end %>
  </div>
</div>
