<% content_for :page_title, t('.title', followable: @followable) %>

<div class="page-header">
  <h1><%= t '.title', followable: @followable %></h1>
</div>

<% @followers.each_slice(3) do |row| %>
  <div class="row">
    <% row.each do |followership| %>
      <div class="col-md-4">
        <div class="followership clearfix">
          <%= render 'user', record: followership.user %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<%= paginate @followers %>
