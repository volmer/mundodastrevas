<div class="col-md-2 user">
  <%= link_to image_tag(post.user.avatar.small.url, class: 'img-responsive img-thumbnail img-circle'), raddar.user_path(post.user) %>

  <div class="name">
    <%= link_to post.user, raddar.user_path(post.user) %>
  </div>


  <% if post.user.rank_in(post.topic.forum.universe).present? %>
    <%= link_to post.user.rank_in(post.topic.forum.universe),
      main_app.universe_path(post.topic.forum.universe, anchor: 'tab-ranks'),
      class: 'label label-primary rank' %>
  <% end %>
</div>
