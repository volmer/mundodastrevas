<nav class="navbar navbar-full navbar-dark bg-inverse">
  <div class='container'>
    <%= link_to 'MdT', root_path, title: Rails.application.config.app_name, class: 'navbar-brand' %>

    <ul class="nav navbar-nav pull-xs-right">
      <li class="nav-item">
        <%= link_to search_path, title: t('searches.show.title'), class: 'nav-link btn btn-secondary-outline' do %>
          <i class="fa fa-search"></i>
        <% end %>
      </li>

      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to notifications_path, title: t('notifications.index.title'), class: 'nav-link btn btn-secondary-outline' do %>
            <i class="fa fa-flag"></i>

            <% if unread_notifications_count(current_user) > 0 %>
              <span class="badge"><%= unread_notifications_count(current_user) %></span>
            <% end %>
          <% end %>
        </li>
      <% end %>

      <li class="nav-item">
        <% if user_signed_in? %>
          <%= link_to current_user, class: 'nav-link nav-img', data: { toggle: 'collapse', target: '#userMenu' } do %>
            <%= image_tag current_user.avatar.thumb.url %>
          <% end %>
        <% else %>
          <%= link_to t('user.session.new'), new_user_session_path, class: 'nav-link btn btn-secondary-outline' %>
        <% end %>
      </li>
    </ul>
  </div>
</nav>

<%= render 'layouts/dropdown' %>
