<% content_for :page_title, t('.title', user: @user) %>

<div class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-9 col-md-offset-1">
    <div class="page-header">
      <h1><%= t '.title', user: @user %></h1>
    </div>

    <ul class="user-messages list-unstyled">
      <% @messages.reverse.each do |message| %>
        <li class="message <%= message.sender == @user ? 'hishers' : 'mine' %>">
          <div class="clearfix">
            <%= link_to image_tag(message.sender.avatar.thumb.url), message.sender %>

            <%= simple_text message.content %>
          </div>

          <%= time_tag message.created_at, format: :long %>
        </li>
      <% end %>
    </ul>

    <%= render 'new' %>
  </div>
</div>
