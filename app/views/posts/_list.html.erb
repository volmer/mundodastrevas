<% posts.each do |post| %>
  <div class="media zine-post">
    <%= link_to [post.zine, post], class: 'media-left' do %>
      <%= image_tag post.image.small.url %>
    <% end %>

    <div class="media-body">
      <h3 class="media-heading">
        <%= link_to post, [post.zine, post] %>
      </h3>

      <p>
        <%= truncate(sanitize(post.content, tags: []), length: 350, separator: ' ') do %>
          <%= link_to t('.more'), [post.zine, post] %>
        <% end %>
      </p>
    </div>
  </div>
<% end %>

<%= paginate posts %>

<% if posts.empty? %>
  <div class="alert alert-info">
    <%= t '.empty' %>
  </div>
<% end %>
