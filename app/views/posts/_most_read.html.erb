<section class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title"><%= t '.title' %></h1>
  </div>

  <ul class="list-group">
    <% posts.each do |post| %>
      <li class="list-group-item">
        <div class="media">
          <%= link_to image_tag(post.image.thumb.url, class: 'media-object pull-left img-rounded'), [post.zine, post], class: 'media-left' %>

          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to post, [post.zine, post] %>
            </h4>

            <p>
              <%= truncate strip_tags(post.content), length: 100, separator: ' ' %>
            </p>
          </div>
        </div>
      <% end %>
    </li>
  </ul>
</section>
