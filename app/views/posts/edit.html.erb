<% content_for :page_title, t('.title') %>

<div class="page-header">
  <h1>
    <%= t '.title' %>
  </h1>
</div>

<%= render 'form', submit: t('.submit') %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= link_to t('.destroy'),
      [@zine, @post],
      method: :delete,
      class: 'btn btn-xs',
      data: { confirm: t('.confirm') } if policy(@post).destroy? %>
  </div>
</div>
