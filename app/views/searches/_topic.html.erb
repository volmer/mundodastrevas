<h1>
  <%= link_to highlight(searchable.name, params[:query]), url_for([searchable.forum, searchable]) %>
</h1>

<p class="clearfix">
  <%= link_to image_tag(searchable.user.avatar.thumb.url), url_for([searchable.forum, searchable]) %>

  <% if searchable.forum_posts.present? %>
    <%= highlight truncate_rich(searchable.forum_posts.order(created_at: :asc).first.content, length: 200), params[:query] %>
  <% end %>
</p>
