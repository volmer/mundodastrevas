<% content_for :page_title, t('.title', q: params[:query]) %>

<div class="page-header">
  <h1><%= t '.title_html', q: params[:query] %></h1>
</div>

<% if @results.present? %>
  <ul class="list-unstyled">
    <% @results.each do |result| %>
      <li class="search-result">
        <%= render "searches/#{result.searchable.class.name.underscore}", searchable: result.searchable %>
      </li>
    <% end %>
  </ul>

  <%= paginate @results %>
<% else %>
  <div class="alert alert-info">
    <%= t '.empty' %>
  </div>
<% end %>
