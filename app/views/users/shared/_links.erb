<% if resource_class.omniauth_providers.present? %>
  <p>
    <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-primary-outline btn-block btn-lg' do %>
      <i class="fa fa-facebook-official"></i>
      <%= t '.sign_in_with', provider: 'Facebook' %>
    <% end %>
  </p>

  <p class="text-xs-center"><%= t '.or' %></p>
<% end %>

<% if controller_name != 'registrations' %>
  <p>
    <%= link_to t('.sign_up'), new_registration_path(resource_class), class: 'btn btn-primary-outline btn-block btn-lg' %>
  </p>
<% end %>

<% if controller_name != 'sessions' %>
  <p>
    <%= link_to t('.sign_in'), new_session_path(resource_class), class: 'btn btn-primary-outline btn-block btn-lg' %>
  </p>
<% end %>

<ul class="list-unstyled">
  <li><%= link_to t('.forgot_password'), new_password_path(resource_name) %></li>

  <li><%= link_to t('.resend_confirmation'), new_confirmation_path(resource_name) %></li>
</ul>
