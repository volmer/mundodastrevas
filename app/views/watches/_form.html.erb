<%= form_for(watch, html: { class: 'watch-button-form' }) do |f| %>
  <%= f.hidden_field :watchable_id %>
  <%= f.hidden_field :watchable_type %>

  <%= hidden_field_tag :watchable_path, watchable_path %>

  <%= f.hidden_field :active %>

  <% if watch.active %>
    <%= f.button :submit, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-eye-open"></span>

      <%= t '.watch' %>
    <% end %>
  <% else %>
    <%= f.button :submit, class: 'btn btn-default btn-sm' do %>
      <span class="glyphicon glyphicon-eye-close"></span>

      <%= t '.unwatch' %>
    <% end %>
  <% end %>
<% end %>
