<%= form_for(watch, html: { class: 'watch-button-form' }) do |f| %>
  <%= f.hidden_field :watchable_id %>
  <%= f.hidden_field :watchable_type %>

  <%= hidden_field_tag :watchable_path, watchable_path %>

  <%= f.hidden_field :active %>

  <% if watch.active %>
    <%= f.button :submit, class: 'btn btn-primary-outline' do %>
      <i class="fa fa-eye-open"></i> <%= t '.watch' %>
    <% end %>
  <% else %>
    <%= f.button :submit, class: 'btn btn-primary-outline btn-sm' do %>
      <i class="fa fa-eye-close"></i> <%= t '.unwatch' %>
    <% end %>
  <% end %>
<% end %>
