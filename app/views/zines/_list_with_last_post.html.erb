<% zines.each do |zine| %>
  <div class="media zine zine-with-post">
    <% post = zine.posts.order('created_at DESC').first %>

    <%= link_to [zine, post], class: 'media-left' do %>
      <%= image_tag post.image.small.url %>
    <% end %>

    <div class="media-body">
      <h3 class="media-heading">
        <%= link_to post, main_app.zine_post_path(zine, post) %>
      </h3>

      <p>
        <em><%= link_to zine, main_app.zine_path(zine) %></em>
      </p>

      <p>
        <%= truncate(strip_tags(post.content), length: 300, separator: ' ') do %>
          <%= link_to t('.more'), [zine, post] %>
        <% end %>
      </p>
    </div>
  </div>
<% end %>

<%= paginate zines %>
